package Event_button_changeBgColor;

import java.awt.Color;
import java.awt.EventQueue;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class Event_button_changeBgColor extends JFrame
{
	private JPanel ButtonPanel;
	private static final int DEFAULT_WIDTH=300;
	private static final int DEFAULT_HEIGHT=20;
	
	public Event_button_changeBgColor()
	{
		this.setSize(DEFAULT_WIDTH,DEFAULT_HEIGHT);
		JButton jb1=new JButton("Yellow");
		JButton jb2=new JButton("Blue");
		
		ButtonPanel=new JPanel();
		ButtonPanel.add(jb1);
		ButtonPanel.add(jb2);
		
		add(ButtonPanel);
		ColorAction yellowAct=new ColorAction(Color.YELLOW);
		ColorAction blueAct=new ColorAction(Color.BLUE);
		
		jb1.addActionListener(yellowAct);
		jb2.addActionListener(blueAct);
	}
	private class ColorAction implements ActionListener
	{
		private Color backgroundColor;
		public ColorAction(Color c)
		{
			backgroundColor=c;
		}
		@Override
		public void actionPerformed(ActionEvent event) {
			
			ButtonPanel.setBackground(backgroundColor);
		}
		
	}
	public static void main(String[]args)
	{
		JFrame frame=new Event_button_changeBgColor();
		frame.setBounds(0,0,500,500);
		frame.setTitle("TestButton");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
	}
	
}

